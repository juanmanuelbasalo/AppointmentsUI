<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppointmentsUI.Login">
    <ContentPage.Padding>
        <OnPlatform x:DataType="Thickness" 
                    iOS="0,20,0,0"
                    Android="5,20,0,5"/>
    </ContentPage.Padding>
    <StackLayout BindingContext="{Binding Source={x:Reference increaseFont}}">
        <Button Clicked="NextQuote_Clicked" Text="Next" x:Name="nextQuote"></Button>
        <Label Text="{Binding Value,
            StringFormat='Font size: {0}'}"  x:Name="fontSize"></Label>
        <Slider Maximum="35" Minimum="12" Value="16" ValueChanged="IncreaseFont_ValueChanged" x:Name="increaseFont"></Slider>
        <Label FontSize="{Binding Value}" x:Name="quotes"></Label>
    </StackLayout>
</ContentPage>